<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".ui.login_register.LoginRegisterActivity">

    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="@dimen/dimens_141"
            android:layout_height="@dimen/dimens_141"
            android:src="@drawable/logo" />

    </LinearLayout>
        <TextView
            android:id="@+id/kesouk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_layout"
            android:layout_marginTop="@dimen/dimens_5"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_18sp"/>

        <TextView
            android:id="@+id/kenya_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kesouk"
            android:layout_marginTop="@dimen/dimens_10"
            android:gravity="center_horizontal"
            android:text="@string/kenya_s_premium_online_supermarket"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/dimens_17sp"/>
    <LinearLayout
        android:id="@+id/logo1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/kenya_market"
        android:layout_marginLeft="@dimen/dimens_16"
        android:layout_marginRight="@dimen/dimens_16">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_image"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/logo1_layout"
        android:gravity="center">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginBottom="@dimen/dimens_5"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/login"
            android:textSize="@dimen/dimens_18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginRight="@dimen/dimens_16"
            android:background="@drawable/round_button_brown"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_register1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginBottom="@dimen/dimens_5"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/register"
            android:textSize="@dimen/dimens_18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginRight="@dimen/dimens_16"
            android:layout_below="@+id/btn_login"
            android:background="@drawable/round_button_brown"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="@dimen/dimens_5"
            android:gravity="center_horizontal"
            android:text="@string/skip"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_18sp"
            android:id="@+id/tv_skip"/>

    </LinearLayout>

</RelativeLayout>