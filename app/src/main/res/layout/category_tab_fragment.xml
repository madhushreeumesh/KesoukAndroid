<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="@string/search_an_item"
        android:drawableLeft="@drawable/search_bar1"
        android:id="@+id/et_search_new"
        android:drawablePadding="@dimen/dimens_5"
        android:singleLine="true"
        android:layout_marginTop="@dimen/dimens_55"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textColorHint="@color/black"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:textSize="@dimen/dimens_10sp"
        android:textColor="@color/black"
        android:background="@drawable/border_black_round"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_marginRight="@dimen/dimens_5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shop_by_category"
        android:textSize="@dimen/dimens_15sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dimens_10"
        android:textColor="@color/black"
        android:id="@+id/tv_shop"
        android:layout_below="@+id/et_search_new"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_shop"
        android:background="@color/tab_line"
        android:layout_marginLeft="@dimen/dimens_10"
        android:layout_marginRight="@dimen/dimens_10"
        android:id="@+id/view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/view"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_marginTop="@dimen/dimens_10"
        android:layout_marginLeft="@dimen/dimens_25"
        android:layout_marginRight="@dimen/dimens_25"/>

</RelativeLayout>