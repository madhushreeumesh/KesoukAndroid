<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:itemBackground">@color/app_bg</item>
    </style>

    <style name="RegisterActivityTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_Loading_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/color_White</item>
        <item name="windowActionBar">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialogThemeLightBg" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorblack</item>
        <item name="android:gravity">center</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BluePrimaryButton" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/color_White</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/dimens_8</item>
        <item name="cardElevation">@dimen/dimens_4</item>
    </style>

    <style name="DialogCardView" parent="CardViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimens_16</item>
        <item name="android:layout_marginBottom">@dimen/dimens_15</item>
        <item name="android:layout_marginTop">@dimen/dimens_15</item>
        <item name="android:layout_marginLeft">@dimen/dimens_16</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogScrollView" parent="CardViewStyle">
        <item name="android:layout_width">@dimen/dialog_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/dimens_14</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DialogTextView">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingLeft">@dimen/dimens_4</item>
        <item name="android:paddingRight">@dimen/dimens_4</item>
        <item name="android:paddingTop">@dimen/dimens_30</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
    </style>

    <style name="DialogTitleTextView">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingTop">@dimen/dimens_10</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">@dimen/dimens_18sp</item>
    </style>

    <style name="SubmitOutlineBtnDialog" parent="SubmitOutlineBtn">
        <item name="android:layout_width">@dimen/submit_dialog_btn_width</item>
        <item name="android:layout_height">@dimen/submit_dialog_btn_height</item>
        <item name="android:layout_marginBottom">@dimen/dimens_8</item>
        <item name="android:layout_marginLeft">@dimen/dimens_4</item>
        <item name="android:layout_marginRight">@dimen/dimens_4</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
    </style>

    <style name="SubmitOutlineBtn">

        <item name="android:layout_width">@dimen/submit_btn_width</item>
        <item name="android:layout_height">@dimen/submit_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dimens_10</item>
        <item name="android:layout_marginLeft">@dimen/dimens_8</item>
        <item name="android:layout_marginRight">@dimen/dimens_8</item>
        <item name="android:text">Submit</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:background">@drawable/yellow_filled_rect</item>-->
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
    </style>

    <style name="SubmitRoundBtn">

        <item name="android:layout_width">@dimen/submit_btn_width</item>
        <item name="android:layout_height">@dimen/submit_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dimens_10</item>
        <item name="android:layout_marginLeft">@dimen/dimens_8</item>
        <item name="android:layout_marginRight">@dimen/dimens_8</item>
        <item name="android:text">Submit</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:background">@drawable/yellow_filled_rect</item>-->
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
    </style>

    <style name="SubmitBtnDialog" parent="SubmitRoundBtn">
        <item name="android:layout_width">@dimen/submit_dialog_btn_width</item>
        <item name="android:layout_height">@dimen/submit_dialog_btn_height</item>
        <item name="android:layout_marginBottom">@dimen/dimens_8</item>
        <item name="android:layout_marginLeft">@dimen/dimens_4</item>
        <item name="android:layout_marginRight">@dimen/dimens_4</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
    </style>

    <style name="loginTextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_bg</item>
        <item name="android:textSize">@dimen/dimens_10sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/dimens_15sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/dimens_40</item><!-- item size in menu-->

    </style>

</resources>
